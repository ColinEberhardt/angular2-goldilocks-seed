{
  "version": "1.6.2",
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "system",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,
    "noImplicitAny": true
  },
  "filesGlob": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "src/bootstrap.ts",
    "src/component/greeting/greeting.ts"
  ]
}
